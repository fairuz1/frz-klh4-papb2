<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/auth_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auth_login"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/auth_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/auth_type"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:hint="@string/username"/>

        <FrameLayout
            android:id="@+id/fragment"
            android:name="com.example.maps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/activity_fragment_auth">

        </FrameLayout>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:hint="@string/password"/>

    </LinearLayout>

    <Button
        android:id="@+id/submit_auth_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/auth_data"
        android:layout_marginTop="20dp"
        android:text="@string/login"/>

    <TextView
        android:id="@+id/auth_alternative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/submit_auth_button"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/register_instead"
        android:clickable="true"
        android:focusable="true" />

</RelativeLayout>